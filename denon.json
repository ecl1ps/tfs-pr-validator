{
  "$schema": "https://deno.land/x/denon@2.4.0/schema.json",
  "scripts": {
    "start": {
        "cmd": "deno run src/index.ts",
        "desc": "run app",
        "allow": [
            "net",
            "env"
        ]
    },
    "debug": {
        "cmd": "deno run src/index.ts",
        "desc": "debug app",
        "allow": [
            "net",
            "env"
        ],
        "inspect": "127.0.0.1:9229"      
    },
    "test": {
        "cmd": "deno test",
        "desc": "run unit tests"
    },
    "bundle": {
        "cmd": "deno bundle src/index.ts dist/app.bundle.js",
        "desc": "creates bundled app"
    }
  }
}

